<resources>

    <declare-styleable name="ym_LoadingView">
        <attr name="ym_text" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="ym_ErrorView">
        <attr name="ym_error_text" format="reference|string"/>
        <attr name="ym_error_title" format="reference|string"/>
        <attr name="ym_error_button_text" format="reference|string"/>
    </declare-styleable>

    <declare-styleable name="ym_ListItemSwitchWithDescription">
        <attr name="ym_ListItemSwitch_Style" format="reference"/>
        <attr name="ym_title" format="string"/>
        <attr name="ym_description" format="string"/>
        <attr name="ym_isChecked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ym_InformerView">
        <attr name="ym_message_text" format="reference|string"/>
        <attr name="ym_action_text" format="reference|string"/>
    </declare-styleable>
</resources>