<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/ym_space_m">

    <ru.yoomoney.sdk.gui.widget.text.TextBodyView
        android:id="@+id/textView"
        style="@style/Text.Body.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/ym_iconPlusText_iconMargin_xl"
        android:gravity="center"
        tools:text="Проблема с интернетом. Попробуйте ещё раз, когда будете онлайн"/>

    <ru.yoomoney.sdk.kassa.payments.ui.FlatButtonView
        android:id="@+id/button"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/ym_decor_marginTop_xl"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ym_text="Повторить попытку"/>
</LinearLayout>
