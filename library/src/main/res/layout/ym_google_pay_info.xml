<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_margin="20dp">

    <ImageView
        android:id="@+id/payImage"
        android:layout_width="@dimen/ym_space3XL"
        android:layout_height="@dimen/ym_space3XL"
        android:src="@drawable/ym_ic_google_pay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/payTitle"
        style="@style/Text.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ym_space_s"
        android:includeFontPadding="false"
        android:maxLines="3"
        app:layout_constraintStart_toEndOf="@+id/payImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/ym_google_pay_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>